{
    "openapi": "3.0.1",
    "info": {
        "title": "Projeto Labook",
        "version": "1.0.0",
        "description": "O Labook é uma rede social com o objetivo de promover a conexão e interação entre seus mais diversos usuários. As pessoas poderão criar e curtir publicações."
    },
    "basePath": "/",
    "components": {
        "schemas": {
            "SignUp": {
                "type": "object",
                "tags": [
                    "User"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "email",
                    "password"
                ]
            },
            "Login": {
                "type": "object",
                "tags": [
                    "User"
                ],
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "password"
                ]
            },
            "Token": {
                "type": "object",
                "tags": [
                    "User"
                ],
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "CreatePost": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "authorization": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    }
                },
                "required": [
                    "authorization",
                    "content"
                ]
            },
            "GetFeed": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "authorization": {
                        "type": "string"
                    }
                },
                "required": [
                    "authorization"
                ]
            },
            "DeletePost": {
                "type": "object",
                "tags": [
                    "Post"
                ],
                "properties": {
                    "authorization": {
                        "type": "string"
                    },
                    "postId": {
                        "type": "string"
                    }
                },
                "required": [
                    "authorization",
                    "postId"
                ]
            }
            }
        },
    "paths": {
        "/users/signup": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Cadastrar usuário",
                "description": "Cadastrar usuário",
                "operationId": "signup",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignUp"
                            },
                            "example": {
                                "name": "João",
                                "email": "joao@gmail.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário cadastrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                },
                                "example": {
                                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxOTE3NzUyLTUwYWItNGM1Zi1iZGIyLWJmNDExZTRkMmM1NyIsInJvbGUiOiJOT1JNQUwiLCJpYXQiOjE2NjQxMTAwMzgsImV4cCI6MTY2NDE5NjQzOH0.urrgI6iu7sTLviab6gYd2o4c13C1G2uvz2Hwfq6Ial0"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao cadastrar usuário"
                    }
                }
            }
        }
    
    }
}